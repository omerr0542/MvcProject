@using EntityLayer.Concrete;
@model Category
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<h1>Kategori Ekleme Sayfası</h1>

<br />

@using(Html.BeginForm("AddCategory", "Category", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Kategori Adı: ")
        @Html.TextBoxFor(model => model.CategoryName, new { @class = "form-control", placeholder = "Kategori Adı" })
        @Html.ValidationMessageFor(model => model.CategoryName)
        <br />
        <br />

        @Html.Label("Açıklama: ")
        @Html.TextBoxFor(model => model.CategoryDescription, new { @class = "form-control", placeholder = "Açıklama" })
        @Html.ValidationMessageFor(model => model.CategoryDescription)
        <br />
        <br />

        <button class="btn btn-primary">Kaydet</button>
    </div>
}

