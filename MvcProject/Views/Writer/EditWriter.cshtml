@model EntityLayer.Concrete.Writer
@{
    ViewData["Title"] = "EditWriter";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yazar Düzenleme</h1>
<br />

@using (Html.BeginForm("EditWriter", "Writer", FormMethod.Post))
{
    <div class="form-group">
        <input type="hidden" asp-for="WriterID" />
        
        @Html.Label("Yazar Adı")
        @Html.TextBoxFor(model => model.WriterName, new { @class = "form-control", placeholder = "Yazar Adı" })
        @Html.ValidationMessageFor(model => model.WriterName, "", new { @class = "text-danger" })
        <br />
        @Html.Label("Yazar Soyadı")
        @Html.TextBoxFor(model => model.WriterSurname, new { @class = "form-control", placeholder = "Yazar Soyadı" })
        @Html.ValidationMessageFor(model => model.WriterSurname, "", new { @class = "text-danger" })
        <br />
        @Html.Label("Yazar Title")
        @Html.TextBoxFor(model => model.WriterTitle, new { @class = "form-control", placeholder = "Yazar Title" })
        @Html.ValidationMessageFor(model => model.WriterTitle, "", new { @class = "text-danger" })
        <br />
        @Html.Label("Yazar Mail")
        @Html.TextBoxFor(model => model.WriterMail, new { @class = "form-control", placeholder = "Yazar Mail" })
        @Html.ValidationMessageFor(model => model.WriterMail, "", new { @class = "text-danger" })
        <br />
        @Html.Label("Yazar Şifresi")
        @Html.TextBoxFor(model => model.WriterPassword, new { @class = "form-control", placeholder = "Yazar Şifresi" })
        @Html.ValidationMessageFor(model => model.WriterPassword, "", new { @class = "text-danger" })
        <br />
        @Html.Label("Yazar Görsel Linki")
        @Html.TextBoxFor(model => model.WriterImage, new { @class = "form-control", placeholder = "Yazar Görsel Linki" })
        @Html.ValidationMessageFor(model => model.WriterImage, "", new { @class = "text-danger" })
        <br />
        @Html.Label("Yazar Hakkında")
        @Html.TextAreaFor(model => model.WriterAbout, new { @class = "form-control", placeholder = "Yazar Hakkında" })
        @Html.ValidationMessageFor(model => model.WriterAbout, "", new { @class = "text-danger" })
        <br />
        <button class="btn btn-primary">Kaydet</button>
    </div>
}
