@using EntityLayer.Concrete;
@model List<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<br />

<table class="table table-bordered">
	<thead>
		<tr>
			<th>ID</th>
			<th>Adı</th>
			<th>Açıklama</th>
			<th>Güncelle</th>
			<th>Sil</th>
			<th>Başlıklar</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.CategoryID</td>
				<td>@item.CategoryName</td>
				<td>@item.CategoryDescription</td>
				<td><a href="/AdminCategory/UpdateCategory/@item.CategoryID" class="btn btn-success">Güncelle</a> </td>
				<td><a href="/AdminCategory/DeleteCategory/@item.CategoryID" class="btn btn-warning">Sil</a> </td>
				<td><a class="btn btn-primary">Başlıklar</a> </td>
			</tr>
		}
	</tbody>
</table>

<a href="/AdminCategory/AddCategory" class="btn btn-info">Yeni Kategori</a>