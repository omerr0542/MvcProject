@using EntityLayer.Concrete;
@model List<Content>
@{
    ViewData["Title"] = "GetAllContent";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@using(Html.BeginForm("GetAllContent", "Content", FormMethod.Post))
{
    <p>
        Aranacak İçerik: @Html.TextBox("p")
        <input type="submit" value="Ara"/>
    </p>
}
)

@foreach (var item in Model)
{
    <div class="card card-primary card-outline">
        <div class="card-header">
            <h3 class="card-title">@item.ContentValue</h3>
        </div>
        <div class="card-body">
            <p>@item.ContentDate.ToString("dd-MM-yyyy")</p>
            <p>@item.Writer.WriterName @item.Writer.WriterSurname</p>
            <p>@item.ContentValue</p>
        </div>
    </div>
}
)
