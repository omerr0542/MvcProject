@model EntityLayer.Concrete.Admin
@{
    ViewData["Title"] = "AddAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Admin Ekle</h1>
<br />

@using (Html.BeginForm("AddAdmin", "Authorization", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Admin Kullanıcı Adı")
        @Html.TextBoxFor(model => model.AdminUserName, new { @class = "form-control" })

        <br />
        @Html.Label("Şifreyi Giriniz")
        @Html.PasswordFor(model => model.AdminPassword, new { @class = "form-control" })

        <br />
        @Html.Label("Rolü Giriniz")
        @Html.TextBoxFor(model => model.AdminRole, new { @class = "form-control" })

        <br />
        <br />
        <button type="submit" class="btn btn-primary">Ekle</button>
    </div>
}

